{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "matrix plot",
  "title": "Top Five Metal Production In Deposit rich states",
  "width": 600,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/Anirud-h-P/FIT3179/main/state_matrix.csv"
  },

  "transform": [
    {"filter": "datum['Copper']"},
    {"window": [{"op": "count", "as": "index"}]},
    {"fold": ["Gold", "Silver", "Copper", "Lead", "Iron"]},
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["Metal"]
    },
    {"calculate": "datum.value", "as": "Number Of Deposits"},
    {"calculate": "(datum.min + datum.max) / 2", "as": "mid"}
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {"detail": {"aggregate": "count"}, "x": {"field": "key"}}
    },
    {
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", "field": "state"},
        "detail": {"type": "nominal", "field": "index"},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "Number Of Deposits"},
        "tooltip": [
          {"type": "nominal", "field": "state"},
          {"type": "quantitative", "field": "Copper"},
          {"type": "quantitative", "field": "Gold"},
          {"type": "quantitative", "field": "Iron"},
          {"type": "quantitative", "field": "Lead"},
          {"type": "quantitative", "field": "Silver"}
        ]
      }
    },
    {
      "encoding": {"x": {"type": "nominal", "field": "key"}, "y": {"value": 0}},
      "layer": [
        {"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}}
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {"mark": {"type": "tick", "style": "tick", "size": 10, "color": "#ccc"}}
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 300}
      },
      "layer": [
        {"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}}
      ]
    }
  ],
  "config": {}
}